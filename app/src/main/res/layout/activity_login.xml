<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginActivity"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome fellow Space Traders!"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_edit"
        android:hint="Enter Name"
        android:inputType="text"
        android:textAlignment="center" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_edit"
        android:hint="Skill Level: Pilot"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/pilot"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_edit"
        android:hint="Skill Level: Fighter"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/fighter"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_edit"
        android:hint="Skill Level: Trader"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/trader"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/custom_edit"
        android:hint="Skill Level: Engineer"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/engineer"/>

    <Spinner
        android:id="@+id/difficulty"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:prompt="@string/difficulty"
        android:background="@drawable/custom_edit"
        android:popupBackground="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Start Game"
        android:textColor="#000"
        android:id="@+id/start"
        android:onClick="start"/>

</LinearLayout>